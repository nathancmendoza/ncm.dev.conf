upstream schoolnotes {
	server 127.0.0.1:8081;
	keepalive 32;
}

server {
	listen 443 ssl;

	ssl_certificate "/etc/letsencrypt/live/notes.ncm.dev/fullchain.pem";
	ssl_certificate_key "/etc/letsencrypt/live/notes.ncm.dev/privkey.pem";

	server_name notes.ncm.dev;

	location /uci/ {
		proxy_pass http://schoolnotes/;
		proxy_http_version 1.1;
		proxy_set_header Connection "";
	}

	access_log /var/log/nginx/schoolnotes-access.log;
	error_log /var/log/nginx/schoolnotes-error.log;
}
